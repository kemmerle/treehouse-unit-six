extends layout.pug

block content
  article.grid-container.portfolio-intro
    div

      h1 Select Projects

      p.lead.text-light
        | As a TalentPath intern, I have completed five
        |projects, in which I honed my skills in DOM traversal, list pagination,
        |form validation, object-oriented programming, and API requests.

  article.grid-container.portfolio-index

    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in projects
        .cell
          a(href= '/projects/' + project.id)
            img.thumbnail(src='' + project.project_thumbnail)
            h5 #{project.project_name}
